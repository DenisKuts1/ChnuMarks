<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="190dp"
    android:orientation="vertical"
    android:background="@drawable/profile_background_default">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/navigation_header_profile_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/profile_default"
        />
    <TextView
        android:id="@+id/navigation_header_profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/navigation_header_default_name"/>
    <TextView
        android:id="@+id/navigation_header_profile_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/navigation_header_default_email"/>
</LinearLayout>