<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.chnumarks.fragments.menu.edit.EditScheduleFragment">

    <TextView
        android:id="@+id/first_week_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/week_1_schedule_fragment"/>

    <ExpandableListView
        android:id="@+id/first_week_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/second_week_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/week_2_schedule_fragment"/>

    <ExpandableListView
        android:id="@+id/second_week_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>
